{
    "name": "imbo/imbo-metadata-search",
    "description": "Metadata search plugin for Imbo",
    "keywords": [ "metadata", "search", "imbo" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Brabrand",
            "email": "kristoffer@brabrand.no"
        },
        {
            "name": "Morten Fangel",
            "email": "fangel@sevengoslings.net"
        }
    ],
    "support": {
        "issues": "https://github.com/imbo/imbo-metadata-search",
        "irc": "irc://irc.freenode.net/imbo"
    },

    "COMMENT": "This should be removed when the changes to imbo-codesniffer is published to packagist",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/kbrabrand/imbo-codesniffer"
        }
    ],

    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "ext-imagick": ">=3.0.1",
        "phpunit/phpunit": "~4.3",
        "imbo/imbo": "~1.2.3",
        "behat/behat": "~3.0",
        "squizlabs/php_codesniffer": "~2.2",
        "imbo/imbo-phpcs-standard": "dev-master"
    },
    "suggest": {
        "elasticsearch/elasticsearch": "Enables usage of elasticsearch as search backend. Recommended version: >=1.3.0"
    },
    "autoload": {
        "psr-4": {
            "Imbo\\MetadataSearch\\": "library/"
        }
    }
}
